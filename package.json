{
  "name": "html-jsx",
  "author": "stagas",
  "short": "stagas/html-jsx",
  "description": "extensible jsx type definitions for standard html interfaces",
  "version": "0.2.2",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://git@github.com:stagas/html-jsx.git"
  },
  "keywords": [
    "jsx",
    "html",
    "dom",
    "types",
    "typings"
  ],
  "module": "./dist/index.esm.js",
  "main": "./dist/index.cjs.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup-type-bundler --dist ./dist --build-script build:all && echo done.",
    "gen": "node -r esbuild-register scripts/gen.ts && prettier --write src/html.ts",
    "docs": "echo no api docs",
    "test": "echo ok",
    "test:web": "web-test-runner",
    "cov": "jest --coverage",
    "playground": "vite --force --cors --https --clearScreen=false --open /playground/",
    "lint": "eslint src && prettier --check src",
    "build:watch": "onchange -i src --await-write-finish 400 -- npm run build",
    "docs:watch": "onchange -i src --await-write-finish 400 -- npm run docs",
    "test:watch": "jest --watchAll",
    "cov:watch": "jest --coverage --watchAll",
    "build:all": "npm run gen && npm run build:types && npm run build:cjs && npm run build:esm",
    "build:types": "tsc -p tsconfig.dist.json",
    "build:cjs": "echo \"module.exports = {}\" >dist/index.cjs.js",
    "build:esm": "echo \"export default {}\" >dist/index.esm.js",
    "build:min": "esbuild src/index.ts --bundle --format=esm | terser --compress --module --mangle -o build.min.js",
    "lint:fix": "eslint --fix src && prettier --write src",
    "clean": "rimraf dist",
    "prepack": "npm run clean && npm run build",
    "prepack:dry": "npm pack --dry-run",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@favware/rollup-type-bundler": "^1.0.6",
    "@markuplint/html-spec": "^1.8.2",
    "@stagas/sucrase-jest-plugin": "^2.2.0-fork",
    "@tsconfig/node16": "^1.0.2",
    "@types/jest": "^27.0.3",
    "@types/node": "^17.0.5",
    "@types/web": "^0.0.48",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "@typescript/lib-dom": "npm:@types/web@^0.0.48",
    "@web/dev-server-esbuild": "^0.2.16",
    "@web/test-runner": "^0.13.23",
    "esbuild": "^0.14.8",
    "esbuild-register": "^3.3.0",
    "eslint": "^8.5.0",
    "eslint-config-html-jsx": "^1.0.0",
    "eslint-plugin-import": "^2.25.3",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "jest-browser-globals": "^25.1.0-beta",
    "onchange": "^7.1.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "terser": "^5.10.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4",
    "vite": "^2.7.7"
  },
  "dependencies": {
    "csstype": "^3.0.10"
  }
}
